<body>
    <header>
        <h1>Portal Educativo</h1>
    </header>
    
    <nav>
        <ul>
            <li><a href="#" onclick="mostrarBot('matematicas')">Matemáticas</a></li>
            <li><a href="#" onclick="mostrarBot('biologia')">Biología</a></li>
            <li><a href="#" onclick="mostrarBot('quimica')">Química</a></li>
            <li><a href="#" onclick="mostrarBot('fisica')">Física</a></li>
            <li><a href="#" onclick="mostrarBot('sociales')">Ciencias Sociales</a></li>
        </ul>
    </nav>
    
    <main>
        <section id="matematicas" style="display:none;">
            <h2>ChatGPT Herrera de Matemáticas</h2>
            <p>Introduce tu pregunta sobre matemáticas:</p>
            <input type="text" id="preguntaMatematicas">
            <button onclick="preguntar('matematicas')">Enviar</button>
            <div id="respuestaMatematicas"></div>
        </section>
        
        <!-- Secciones similares para biología, química, física y ciencias sociales -->
    </main>

    <footer>
        <p>&copy; 2024 Portal Educativo</p>
    </footer>

    <script>
        function mostrarBot(area) {
            // Oculta todas las secciones
            var secciones = document.getElementsByTagName('section');
            for (var i = 0; i < secciones.length; i++) {
                secciones[i].style.display = 'none';
            }
            // Muestra la sección del área seleccionada
            document.getElementById(area).style.display = 'block';
        }

        function preguntar(area) {
            var pregunta = document.getElementById("pregunta" + area).value;
            if (pregunta.trim() !== "") {
                var respuesta = obtenerRespuesta(area);
                document.getElementById("respuesta" + area).innerHTML = respuesta;
            } else {
                alert("Por favor, introduce una pregunta.");
            }
        }

        function obtenerRespuesta(area) {
            // Lógica para obtener la respuesta a la pregunta en función del área
            switch (area) {
                case 'matematicas':
                    return "¡Hola! Soy ChatGPT Herrera, ¿en qué puedo ayudarte con matemáticas?";
                case 'biologia':
                    return "¡Hola! Soy ChatGPT Herrera, ¿en qué puedo ayudarte con biología?";
                case 'quimica':
                    return "¡Hola! Soy ChatGPT Herrera, ¿en qué puedo ayudarte con química?";
                case 'fisica':
                    return "¡Hola! Soy ChatGPT Herrera, ¿en qué puedo ayudarte con física?";
                case 'sociales':
                    return "¡Hola! Soy ChatGPT Herrera, ¿en qué puedo ayudarte con ciencias sociales?";
                default:
                    return "Lo siento, no puedo responder a esa pregunta.";
            }
        }
    </script>
</body>
